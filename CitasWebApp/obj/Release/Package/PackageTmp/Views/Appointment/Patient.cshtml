@using CitasWebApp.Models
@model dynamic
@{
    ViewBag.Title = "Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5 class="mb-0"><strong>Pricing</strong></h5>
<span class="text-secondary">Ecommerce <i class="fa fa-angle-right"></i> pricing</span>

<div class="mt-4 mb-4 p-4 button-container bg-white border shadow-sm lh-sm">

    <div class="text-center">
        <h3>Start up your Bussiness today</h3>
        <p>Choose a plan that suits you the best. If you are not fully satisfied, we offer 30-day money-back guarantee no questions asked!!</p>
    </div>

    <div class="row">
        @foreach (var x in Model.doctores)
        {
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card">
                    <img class="card-img-top" src="~/img/doctor/1.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@(x.nombres + " " + x.apellidos)</h5>
                        <a href="#" class="btn btn-theme text-white">Seleccionar</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

